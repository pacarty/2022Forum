@using WhirlForum2.Models

@model PostManagementModel

<h1>Post Management</h1>

<table>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Creator</th>
        <th>Action</th>
    </tr>
@foreach (var post in Model.PostModels)
{
    <tr>
        <td>@post.Id</td>
        <td><a asp-controller="ContentManagement" asp-action="CommentManagement" asp-route-id="@post.Id">@post.Name</a></td>
        <td>@post.UserModel.Username</td>
        <td>
            <form asp-controller="ContentManagement" asp-action="DeletePostManagement" method="post">
                            <input asp-for="EditPostModel.PostId" value="@post.Id" type="hidden" />
                            <input asp-for="EditPostModel.CurrentPage" type="hidden" />
                            <button type="submit">Delete</button>
            </form>
        </td>
    </tr>        
}
</table>
<br />

@Html.Partial("_PostManagementPagination", Model.PaginationInfo)
